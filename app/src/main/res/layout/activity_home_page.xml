<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7F8D4"
    tools:context=".MainActivity"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/headerTitle"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:fontFamily="@font/rampart_one"
        android:text="@string/recipe_kittext"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="25dp"

        />

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@+id/headerTitle"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="3dp"
        android:background="#09C274"
        android:fontFamily="@font/ribeye"
        android:gravity="center"
        android:text="@string/second_text"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="25dp" />


    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchview"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/text2"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/rounded_corners"
        android:queryHint="Search for your favorite recipe" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchview">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/searchview"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true">


            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/img"
                android:scaleType="centerCrop" />


            <TextView
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_below="@+id/imageButton1"
                android:layout_marginStart="70dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/ribeye"
                android:text="indian"
                android:textColor="@color/black"
                android:textSize="20sp" />


            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:layout_marginLeft="213dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/img_1"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_below="@+id/imageButton2"
                android:layout_marginStart="270dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/ribeye"
                android:text="italian"
                android:textColor="@color/black"
                android:textSize="20sp" />


            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="200dp"
                android:background="@drawable/img_2"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_below="@+id/imageButton3"
                android:layout_marginStart="65dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/ribeye"
                android:text="mexican"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:layout_marginLeft="213dp"
                android:layout_marginTop="200dp"
                android:background="@drawable/img_3"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_below="@+id/imageButton4"
                android:layout_marginStart="269dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/ribeye"
                android:text="chinese"
                android:textColor="@color/black"
                android:textSize="20sp" />


            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="373dp"
                android:background="@drawable/img_4"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_below="@+id/imageButton5"
                android:layout_marginStart="60dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/ribeye"
                android:text="desserts"
                android:textColor="@color/black"
                android:textSize="20sp" />


            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:layout_marginLeft="213dp"
                android:layout_marginTop="373dp"
                android:background="@drawable/img_5"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_below="@+id/imageButton6"
                android:layout_marginStart="269dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/ribeye"
                android:text="russian"
                android:textColor="@color/black"
                android:textSize="20sp" />


            <Button
                android:id="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="550dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/rounded_corners"
                android:fontFamily="@font/ribeye"
                android:gravity="center"
                android:text="@string/scroll_down"
                android:textColor="#000000"
                android:textSize="25dp" />

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>
